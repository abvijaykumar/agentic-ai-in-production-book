# LLM Provider Configuration
LLM_PROVIDER=openai  # or 'anthropic'

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Database Configuration
DATABASE_URL=postgresql://supportmax:supportmax_password@postgres:5432/supportmax
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Email Integration
EMAIL_ENABLED=true
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=support@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_NAME=SupportMax Pro
EMAIL_CHECK_INTERVAL=60  # seconds

# Salesforce Integration (optional)
SALESFORCE_ENABLED=false
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-security-token
SALESFORCE_DOMAIN=login  # or 'test' for sandbox

# Application Configuration
APP_NAME=SupportMax Pro MVP
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production  # development, staging, production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Production Constraints
MAX_RESPONSE_TIME_SECONDS=30.0
MAX_TOKENS_PER_QUERY=3000
MAX_RETRIES=3
SESSION_TIMEOUT_MINUTES=30

# Vector Store Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=supportmax_knowledge

# Queue Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300

# Feature Flags
FEATURE_MULTI_TURN_CHAT=true
FEATURE_EMAIL_INTEGRATION=true
FEATURE_SALESFORCE_INTEGRATION=false
FEATURE_SEMANTIC_SEARCH=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_SECRET=change-this-jwt-secret-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440  # 24 hours